{
  "name": "@schema-ts/core",
  "version": "0.1.6",
  "description": "Core schema validation library",
  "author": "cnfatal",
  "license": "MIT",
  "homepage": "https://github.com/cnfatal/schema-ts/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cnfatal/schema-ts.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/cnfatal/schema-ts/issues"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "schema",
    "validation",
    "typescript"
  ],
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
